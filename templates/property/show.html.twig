{% extends "base.html.twig" %}
{% block title %}
    <h1>{{ property.title}}</h1>   
{% endblock %}

{% block body %}

<div class="jumbotron">
        <div class="container p-4">
            <div class="row">
                <div class="col-md-8">
                
                
                {% if property.filename %}
                    <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('medium')  }}" alt="image du bien" class="card-img-top" style="width:100% ,height:auto">
                {% else %}
                    <img src="{{ '/images/properties/empty.jpg' | imagine_filter('medium') }}" alt="image du bien" class="card-img-top">
                {% endif %}
                   
                </div>
                <div class="col-md-4">
                    <h1>{{property.title}}</h1>
                    <h2>{{property.rooms}}
                        pièces -
                        {{property.surface}}
                        m²</h2>
                    <div class="text-primary" style="font-size: 3rem; font-weight:bold">{{property.formattedPrice}}
                        €
                    </div>
                    <a class="btn btn-primary" href="#">
                        Contactez l'agence</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container p-4">
        <nav class="nav nav-tabs mb-4" id="tabs"></nav>
        <div class="row">
            <div class="col-md-8">          
                <table class="table table-striped">
                    <tr>
                        <td><h2>Caractéristiques</h2></td>
                        <td><h2>Spécificités</h2></td>
                    </tr>
                    <tr>
                        <td>Surface habitable</td>
                        <td>{{property.surface}}
                            m²</td>
                    </tr>
                    <tr>
                        <td>Nb de pièces</td>
                        <td>{{property.rooms}}</td>
                    </tr>
                    <tr>
                        <td>Chambre</td>
                        <td>{{property.bedrooms}}</td>
                    </tr>
                    <tr>
                        <td>Etage</td>
                        <td>{{property.floor}}</td>
                    </tr>
                    <tr>
                        {# <td>Chauffage</td>
                        <td>{{property.heatType}}</td> #}
                    </tr>
                </table>
            </div>            
        </div>
    </div>
    
{% endblock %}