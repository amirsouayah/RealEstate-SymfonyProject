{% extends 'base.html.twig' %}
{% block title 'Agence loren ipsum' %}
{% block body %}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"><a href="#">Home</a></li>
    <li class="breadcrumb-item"><a href="/biens">Les Biens </a></li>
    <li class="breadcrumb-item ">Data</li>
  </ol>
</nav>


    <div class="jumbotron text-center">
    <h1>Agence lorem ipsum</h1>
        <p>Laborum dolore nisi ut officia nostrud tempor sit adipisicing amet duis sit do enim.
         Anim sit consequat reprehenderit et. Cupidatat reprehenderit anim voluptate velit
          laborum duis aliqua eiusmod est do tempor.</p>
    </div>

    <div class="container">
    <h2>Les derniers biens</h2>
    <div class='row flex'>
     {% for property in properties %}
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                <h5 class='card-title'>
                 {# <a href={{ path ('property.show', {id: property.id,slug:property.slug} ) }}> {{property.title}} </a> #}
                 {# <a href="{{ path ('property.show', {id: property.id,slug :property.slug}) }}"> {{ property.title }}</a> #}
                 </h5>
                 <p class='card-text'>{{ property.title}}</p>
                 <p class='card-text'>rooms : {{ property.rooms}}</p>
                 <p class='card-text'>{{ property.city}} {{ property.postalCode}}</p>
                 <div class="text-primary" style="font-weight: bold;font-size:2rem">{{ property.FormattedPrice}} €</div>
                 </div>
            </div>
        </div>
        <div class="row">
                <div class="col-md-8">
                    <h2>Caractéristiques</h2>
                    <table class="table-striped">
                        <tr>
                            <td>Surface habitable</td>
                            <td>{{ property.surface }} m²</td>
                        </tr>
                        <tr>
                            <td>Pièces</td>
                            <td>{{ property.rooms }}</td>
                        </tr>
                        <tr>
                            <td>Chambres</td>
                            <td>{{ property.bedrooms }}</td>
                        </tr>
                        <tr>
                            <td>Etage</td>
                            <td>{{ property.floor }}</td>
                        </tr>
                        {# <tr>
                            <td>Chaffage</td>
                            <td>{{ property.heatType }}</td>
                        </tr> #}
                    </table>
                </div>
     {% endfor %}
        </div>
{% endblock body %} 